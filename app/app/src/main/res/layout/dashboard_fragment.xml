<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TEXTE BONJOUR -->
        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour !"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- SOUS TEXTE -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voici les dernières infos sur votre chat"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="?android:textColorSecondary" />

        <!-- ESPACE -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- LIGNE DES CARTES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- DERNIER PASSAGE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLastPassage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TITRE -->
                    <TextView
                        android:id="@+id/tvNbPassagesTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dernier passage"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivArrowLast"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- FLÈCHE -->
                    <ImageView
                        android:id="@+id/ivArrowLast"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="Voir détails"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- VALEUR -->
                    <TextView
                        android:id="@+id/tvLastPassage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/---- --:--"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvNbPassagesTitle"
                        android:layout_marginTop="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARTE NOMBRE DE PASSAGES -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNbPassages"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TITRE -->
                    <TextView
                        android:id="@+id/tvLastPassageTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total passages"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivArrowLast2"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- FLÈCHE -->
                    <ImageView
                        android:id="@+id/ivArrowLast2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="Voir détails"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- VALEUR -->
                    <TextView
                        android:id="@+id/tvNbPassages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLastPassageTitle"
                        android:layout_marginTop="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- CARTE GRAPHE -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TITRE -->
                <TextView
                    android:text="Passages à la litière aujourd’hui"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <!-- GRAPHE -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- ESPACE -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- LIGNE DES CARTES -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- DERNIER PASSAGE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDernierChangement"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TITRE -->
                    <TextView
                        android:id="@+id/tvDernierChangementTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Dernier changement"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivArrowLast3"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- FLÈCHE -->
                    <ImageView
                        android:id="@+id/ivArrowLast3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="Voir détails"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- VALEUR -->
                    <TextView
                        android:id="@+id/tvDernierChangement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/---- --:--"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvDernierChangementTitle"
                        android:layout_marginTop="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARTE CHANGEMENT RECOMMANDE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardChangementReco"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- TITRE -->
                    <TextView
                        android:id="@+id/tvChangementRecoTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Changement recommandé"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/ivArrowLast6"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <!-- FLÈCHE -->
                    <ImageView
                        android:id="@+id/ivArrowLast6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_forward"
                        android:contentDescription="Voir détails"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <!-- VALEUR -->
                    <TextView
                        android:id="@+id/tvChangementReco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvChangementRecoTitle"
                        android:layout_marginTop="8dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvWeightSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poids du chat"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- TUILE POIDS -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeightValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:text="Poids"
                        android:textSize="12sp"
                        android:textColor="?android:textColorSecondary"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:id="@+id/tvWeightValue"
                        android:text="4.5 kg"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- TUILE TENDANCE -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeightTrend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivWeightTrend"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_flat"
                        android:contentDescription="Tendance" />

                    <TextView
                        android:id="@+id/tvWeightTrend"
                        android:text="En hausse"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- ESPACE -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- CARTE EVOLUTION POIDS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardWeightHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TITRE -->
                <TextView
                    android:id="@+id/tvWeightHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Évolution du poids (3 derniers mois)"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- LINE CHART -->
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartWeightHistory"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>